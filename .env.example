# --- APP CONFIGURATION ---
APP_NAME=TurboFrame
APP_ENV=local
APP_DEBUG=true
APP_KEY=base64:uninitialized
APP_URL=http://localhost:7000

# --- SERVER CONFIGURATION ---
TURBO_HOST=127.0.0.1
TURBO_PORT=7000
NITROUS_MODE=true

# --- DATABASE CONFIGURATION ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=turboframe
DB_USERNAME=root
DB_PASSWORD=

# --- CACHE & SESSION ---
CACHE_DRIVER=opcache
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --- LOGGING ---
LOG_CHANNEL=daily
LOG_LEVEL=debug

# --- MAIL (SMTP) ---
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@turboframe.io"
MAIL_FROM_NAME="${APP_NAME}"

# --- GOOGLE SSO (OAUTH) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

# --- FACEBOOK SSO ---
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URL="${APP_URL}/auth/facebook/callback"

# --- STORAGE (AWS S3 / CLOUDINARY) ---
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=

CLOUDINARY_URL=
CLOUDINARY_UPLOAD_PRESET=

# --- JAVASCRIPT & FRONTEND ---
# Integration for React/Next.js/Vite
FRONTEND_URL=http://localhost:3000
VITE_API_BASE_URL="${APP_URL}/api"
JWT_SECRET=
JWT_ALGO=HS256

# --- PAYMENT GATEWAYS (STRIPE/MIDTRANS) ---
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# --- THIRD-PARTY SERVICES ---
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

OPENAI_API_KEY=
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
